{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.15.0"
  },
  "scripts": {
    "start-link": "wml start",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "pre-push": "yarn lint:fix"
    }
  },
  "workspaces": {
    "packages": [
      "common",
      "mobile",
      "web",
      "server"
    ],
    "nohoist": [
      "**/react*",
      "**/react*/**",
      "**/react-native*",
      "**/react-native*/**",
      "**/@react-native-community/**",
      "**/@react-navigation/**",
      "**/gatsby*",
      "**/gatsby*/**",
      "**/expo",
      "**/expo/**",
      "**/@pmmmwh/**"
    ]
  }
}
